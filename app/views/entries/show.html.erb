<% content_for :title do%>
<%= @entry.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        Meal type:
        <%= @entry.meal_type %>
      </p>
      <div class="panel-bloc">
        Calories:
        <%= @entry.calories %>
      </div>
      <div class="panel-bloc">
        Proteins:
        <%= @entry.proteins %>
      </div>
      <div class="panel-bloc">
        Carbohydrates:
        <%= @entry.carbohydrates %>
      </div>
      <div class="panel-bloc">
        Fats:
        <%= @entry.fats %>
      </nav>

      <div class="columns is-mobile">
        <div class="column">
          <%= link_to 'Edit', edit_entry_path(@entry), class: 'button is-gray' %> |
          <%= link_to 'Delate', entry_path(@entry), method: :delete, data: { confirm: 'Are you sure?'}, class: 'button is-gray'  %>
        </div>
      </div>
  </div>
</div>